---
// Contact Section - Adapted from Stitch design
import { t, type Lang } from '../i18n/ui';

interface Props {
  lang?: Lang;
}

const { lang = 'es' } = Astro.props;
---

<section class="contact section" id="contact">
  <div class="container">
    <div class="contact-grid">
      <!-- Left Column: Info -->
      <div class="contact-info reveal-left">
        <div class="contact-badge">{t(lang, 'contact.badge')}</div>
        <h2 class="contact-title">{t(lang, 'contact.title')} <span class="gradient-text">{t(lang, 'contact.title_highlight')}</span></h2>
        <p class="contact-description">
          {t(lang, 'contact.description')}
        </p>
        
        <!-- Contact Details -->
        <div class="contact-details">
          <div class="detail-item">
            <div class="detail-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
            </div>
            <div class="detail-content">
              <span class="detail-label">{t(lang, 'contact.info.email_label')}</span>
              <a href="mailto:contactos.ronald2209@gmail.com" class="detail-value">contactos.ronald2209@gmail.com</a>
            </div>
          </div>
          
          <div class="detail-item">
            <div class="detail-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
            </div>
            <div class="detail-content">
              <span class="detail-label">{t(lang, 'contact.info.phone_label')}</span>
              <a href="tel:+51992311691" class="detail-value">+51 992 311 691</a>
            </div>
          </div>
          
          <div class="detail-item">
            <div class="detail-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
            </div>
            <div class="detail-content">
              <span class="detail-label">{t(lang, 'contact.info.location_label')}</span>
              <span class="detail-value">{t(lang, 'contact.info.location')}</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Right Column: Form -->
      <div class="contact-form-wrapper reveal-right">
        <div class="form-glow"></div>
        <form class="contact-form" id="contact-form">
          <div class="form-row">
            <div class="form-group">
              <label for="name">{t(lang, 'contact.form.name')}</label>
              <div class="input-wrapper">
                <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                  <circle cx="12" cy="7" r="4"/>
                </svg>
                <input type="text" id="name" name="name" placeholder={t(lang, 'contact.form.name_placeholder')} required>
              </div>
            </div>
            <div class="form-group">
              <label for="email">{t(lang, 'contact.form.email')}</label>
              <div class="input-wrapper">
                <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="4"/>
                  <path d="M16 8v5a3 3 0 0 0 6 0v-1a10 10 0 1 0-3.92 7.94"/>
                </svg>
                <input type="email" id="email" name="email" placeholder={t(lang, 'contact.form.email_placeholder')} required>
              </div>
            </div>
          </div>
          
          <div class="form-group">
            <label for="subject">Asunto</label>
            <div class="input-wrapper">
              <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"/>
                <line x1="7" y1="7" x2="7.01" y2="7"/>
              </svg>
              <select id="subject" name="subject">
                <option>Consulta de Proyecto</option>
                <option>Oportunidad Laboral</option>
                <option>Colaboraci√≥n</option>
                <option>Otro</option>
              </select>
              <svg class="select-arrow" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6 9 12 15 18 9"/>
              </svg>
            </div>
          </div>
          
          <div class="form-group">
            <label for="message">{t(lang, 'contact.form.message')}</label>
            <textarea id="message" name="message" rows="5" placeholder={t(lang, 'contact.form.message_placeholder')} required></textarea>
          </div>
          
          <button type="submit" class="btn btn-primary btn-submit">
            <span>{t(lang, 'contact.form.submit')}</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="22" y1="2" x2="11" y2="13"/>
              <polygon points="22 2 15 22 11 13 2 9 22 2"/>
            </svg>
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    background: var(--color-dark);
  }
  
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }
  
  /* Left Column */
  .contact-badge {
    display: inline-block;
    padding: 0.375rem 1rem;
    background: rgba(13, 148, 136, 0.15);
    color: var(--color-primary);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: var(--radius-full);
    margin-bottom: 1.5rem;
  }
  
  .contact-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: var(--color-light);
  }
  
  .contact-description {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    max-width: 400px;
    margin-bottom: 2.5rem;
  }
  
  /* Contact Details */
  .contact-details {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-dark-muted);
    margin-bottom: 2rem;
  }
  
  .detail-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .detail-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--color-dark-soft);
    border-radius: var(--radius-lg);
    color: var(--color-primary);
    flex-shrink: 0;
  }
  
  .detail-label {
    display: block;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-bottom: 0.25rem;
  }
  
  .detail-value {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-light);
    transition: color var(--transition-fast);
  }
  
  a.detail-value:hover {
    color: var(--color-primary);
  }
  
  /* Social Section */
  .social-section {
    padding-top: 1.5rem;
  }
  
  .social-label {
    display: block;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }
  
  .social-buttons {
    display: flex;
    gap: 0.75rem;
  }
  
  .social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--color-dark-soft);
    border-radius: var(--radius-lg);
    color: var(--color-text);
    transition: all var(--transition-base);
  }
  
  .social-btn:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-3px);
  }
  
  /* Right Column: Form */
  .contact-form-wrapper {
    background: var(--color-dark-soft);
    border-radius: var(--radius-xl);
    padding: 2.5rem;
    border: 1px solid var(--color-dark-muted);
    position: relative;
    overflow: hidden;
  }
  
  .form-glow {
    position: absolute;
    top: -100px;
    right: -100px;
    width: 250px;
    height: 250px;
    background: rgba(13, 148, 136, 0.08);
    border-radius: 50%;
    filter: blur(60px);
    pointer-events: none;
  }
  
  .contact-form {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .form-group label {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-light);
  }
  
  .input-wrapper {
    position: relative;
  }
  
  .input-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-text-muted);
    pointer-events: none;
  }
  
  .select-arrow {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-text-muted);
    pointer-events: none;
  }
  
  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.875rem 1rem;
    background: var(--color-dark);
    border: 1px solid var(--color-dark-muted);
    border-radius: var(--radius-md);
    color: var(--color-text);
    font-family: inherit;
    font-size: 0.95rem;
    transition: all var(--transition-base);
  }
  
  .form-group input,
  .form-group select {
    padding-left: 2.75rem;
  }
  
  .form-group select {
    appearance: none;
    cursor: pointer;
    padding-right: 2.75rem;
  }
  
  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(13, 148, 136, 0.15);
  }
  
  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: var(--color-dark-muted);
  }
  
  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }
  
  .btn-submit {
    width: 100%;
    padding: 1rem;
    font-size: 1rem;
    margin-top: 0.5rem;
  }
  
  .btn-submit:hover svg {
    transform: translateX(3px);
  }
  
  .btn-submit svg {
    transition: transform var(--transition-base);
  }
  
  /* Responsive */
  @media (max-width: 900px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .contact-description {
      max-width: 100%;
    }
  }
  
  @media (max-width: 600px) {
    .form-row {
      grid-template-columns: 1fr;
    }
    
    .contact-form-wrapper {
      padding: 1.5rem;
    }
    
    .contact-title {
      font-size: 1.75rem;
    }
  }
</style>
