---
// Contact Section - Adapted from Stitch design
import { t, type Lang } from '../i18n/ui';

interface Props {
  lang?: Lang;
}

const { lang = 'es' } = Astro.props;
const web3formsKey = import.meta.env.PUBLIC_WEB3FORMS_KEY;
---

<section class="contact section" id="contact">
  <div class="container">
    <div class="contact-grid">
      <!-- Left Column: Info -->
      <div class="contact-info reveal-left">
        <div class="contact-badge">{t(lang, 'contact.badge')}</div>
        <h2 class="contact-title">{t(lang, 'contact.title')} <span class="gradient-text">{t(lang, 'contact.title_highlight')}</span></h2>
        <p class="contact-description">
          {t(lang, 'contact.description')}
        </p>
        
        <!-- Contact Details -->
        <div class="contact-details">
          <div class="detail-item">
            <div class="detail-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
            </div>
            <div class="detail-content">
              <span class="detail-label">{t(lang, 'contact.info.email_label')}</span>
              <a href="mailto:contactos.ronald2209@gmail.com" class="detail-value">contactos.ronald2209@gmail.com</a>
            </div>
          </div>
          
          <div class="detail-item">
            <div class="detail-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
            </div>
            <div class="detail-content">
              <span class="detail-label">{t(lang, 'contact.info.phone_label')}</span>
              <a href="tel:+51992311691" class="detail-value">+51 992 311 691</a>
            </div>
          </div>
          
          <div class="detail-item">
            <div class="detail-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
            </div>
            <div class="detail-content">
              <span class="detail-label">{t(lang, 'contact.info.location_label')}</span>
              <span class="detail-value">{t(lang, 'contact.info.location')}</span>
            </div>
          </div>
        </div>
      </div>
      <!-- Right Column: Form -->
      <div class="contact-form-wrapper reveal-right" id="form-wrapper">
        <div class="form-glow"></div>
        
        <!-- Success Overlay with Blur -->
        <div class="success-overlay" id="success-overlay">
          <div class="success-content">
            <div class="check-circle">
              <svg class="check-svg" viewBox="0 0 52 52">
                <circle class="check-circle-bg" cx="26" cy="26" r="25" fill="none"/>
                <circle class="check-circle-line" cx="26" cy="26" r="25" fill="none"/>
                <path class="check-mark" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
              </svg>
            </div>
            <h3 class="success-title">{lang === 'es' ? '¡Mensaje enviado!' : 'Message sent!'}</h3>
            <p class="success-text">{lang === 'es' ? 'Gracias por contactarme. Te responderé pronto.' : 'Thanks for reaching out. I\'ll get back to you soon.'}</p>
          </div>
        </div>
        
        <!-- Error Message -->
        <div class="form-status error" id="form-error">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <line x1="15" y1="9" x2="9" y2="15"/>
            <line x1="9" y1="9" x2="15" y2="15"/>
          </svg>
          <h3>{lang === 'es' ? 'Error al enviar' : 'Failed to send'}</h3>
          <p>{lang === 'es' ? 'Hubo un problema. Intenta de nuevo o escríbeme directamente.' : 'Something went wrong. Try again or email me directly.'}</p>
        </div>
        
        <form class="contact-form" id="contact-form" data-lang={lang}>
          <!-- Web3Forms Hidden Fields -->
          <input type="hidden" name="access_key" value={web3formsKey}>
          <input type="hidden" name="subject" value="Nuevo mensaje desde Portfolio - Ronald Davila">
          <input type="hidden" name="from_name" value="Portfolio Contact Form">
          <!-- Honeypot for spam protection -->
          <input type="checkbox" name="botcheck" class="hidden" style="display:none">
          
          <div class="form-row">
            <div class="form-group">
              <label for="name">{t(lang, 'contact.form.name')}</label>
              <div class="input-wrapper">
                <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                  <circle cx="12" cy="7" r="4"/>
                </svg>
                <input type="text" id="name" name="name" placeholder={t(lang, 'contact.form.name_placeholder')} required>
              </div>
            </div>
            <div class="form-group">
              <label for="email">{t(lang, 'contact.form.email')}</label>
              <div class="input-wrapper">
                <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="4"/>
                  <path d="M16 8v5a3 3 0 0 0 6 0v-1a10 10 0 1 0-3.92 7.94"/>
                </svg>
                <input type="email" id="email" name="email" placeholder={t(lang, 'contact.form.email_placeholder')} required>
              </div>
            </div>
          </div>
          
          <div class="form-group">
            <label for="inquiry_type">{lang === 'es' ? 'Asunto' : 'Subject'}</label>
            <div class="input-wrapper">
              <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"/>
                <line x1="7" y1="7" x2="7.01" y2="7"/>
              </svg>
              <select id="inquiry_type" name="inquiry_type">
                <option value="Consulta de Proyecto">{lang === 'es' ? 'Consulta de Proyecto' : 'Project Inquiry'}</option>
                <option value="Oportunidad Laboral">{lang === 'es' ? 'Oportunidad Laboral' : 'Job Opportunity'}</option>
                <option value="Colaboración">{lang === 'es' ? 'Colaboración' : 'Collaboration'}</option>
                <option value="Otro">{lang === 'es' ? 'Otro' : 'Other'}</option>
              </select>
              <svg class="select-arrow" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6 9 12 15 18 9"/>
              </svg>
            </div>
          </div>
          
          <div class="form-group">
            <label for="message">{t(lang, 'contact.form.message')}</label>
            <textarea id="message" name="message" rows="5" placeholder={t(lang, 'contact.form.message_placeholder')} required></textarea>
          </div>
          
          <button type="submit" class="btn btn-primary btn-submit" id="submit-btn">
            <span class="btn-text">{t(lang, 'contact.form.submit')}</span>
            <span class="btn-loading">{lang === 'es' ? 'Enviando...' : 'Sending...'}</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="22" y1="2" x2="11" y2="13"/>
              <polygon points="22 2 15 22 11 13 2 9 22 2"/>
            </svg>
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    background: var(--color-dark);
  }
  
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }
  
  /* Left Column */
  .contact-badge {
    display: inline-block;
    padding: 0.375rem 1rem;
    background: rgba(13, 148, 136, 0.15);
    color: var(--color-primary);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: var(--radius-full);
    margin-bottom: 1.5rem;
  }
  
  .contact-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: var(--color-light);
  }
  
  .contact-description {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    max-width: 400px;
    margin-bottom: 2.5rem;
  }
  
  /* Contact Details */
  .contact-details {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-dark-muted);
    margin-bottom: 2rem;
  }
  
  .detail-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .detail-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--color-dark-soft);
    border-radius: var(--radius-lg);
    color: var(--color-primary);
    flex-shrink: 0;
  }
  
  .detail-label {
    display: block;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-bottom: 0.25rem;
  }
  
  .detail-value {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-light);
    transition: color var(--transition-fast);
  }
  
  a.detail-value:hover {
    color: var(--color-primary);
  }
  
  /* Social Section */
  .social-section {
    padding-top: 1.5rem;
  }
  
  .social-label {
    display: block;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
  }
  
  .social-buttons {
    display: flex;
    gap: 0.75rem;
  }
  
  .social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--color-dark-soft);
    border-radius: var(--radius-lg);
    color: var(--color-text);
    transition: all var(--transition-base);
  }
  
  .social-btn:hover {
    background: var(--color-primary);
    color: white;
    transform: translateY(-3px);
  }
  
  /* Right Column: Form */
  .contact-form-wrapper {
    background: var(--color-dark-soft);
    border-radius: var(--radius-xl);
    padding: 2.5rem;
    border: 1px solid var(--color-dark-muted);
    position: relative;
    overflow: hidden;
  }
  
  .form-glow {
    position: absolute;
    top: -100px;
    right: -100px;
    width: 250px;
    height: 250px;
    background: rgba(13, 148, 136, 0.08);
    border-radius: 50%;
    filter: blur(60px);
    pointer-events: none;
  }
  
  .contact-form {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .form-group label {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-light);
  }
  
  .input-wrapper {
    position: relative;
  }
  
  .input-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-text-muted);
    pointer-events: none;
  }
  
  .select-arrow {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-text-muted);
    pointer-events: none;
  }
  
  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.875rem 1rem;
    background: var(--color-dark);
    border: 1px solid var(--color-dark-muted);
    border-radius: var(--radius-md);
    color: var(--color-text);
    font-family: inherit;
    font-size: 0.95rem;
    transition: all var(--transition-base);
  }
  
  .form-group input,
  .form-group select {
    padding-left: 2.75rem;
  }
  
  .form-group select {
    appearance: none;
    cursor: pointer;
    padding-right: 2.75rem;
  }
  
  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(13, 148, 136, 0.15);
  }
  
  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: var(--color-dark-muted);
  }
  
  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }
  
  .btn-submit {
    width: 100%;
    padding: 1rem;
    font-size: 1rem;
    margin-top: 0.5rem;
  }
  
  .btn-submit:hover svg {
    transform: translateX(3px);
  }
  
  .btn-submit svg {
    transition: transform var(--transition-base);
  }
  
  /* Responsive */
  @media (max-width: 900px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .contact-description {
      max-width: 100%;
    }
  }
  
  @media (max-width: 600px) {
    .contact {
      padding: 50px 0;
    }
    
    .contact-grid {
      gap: 2rem;
    }
    
    .contact-badge {
      font-size: 0.65rem;
      padding: 0.25rem 0.75rem;
    }
    
    .contact-title {
      font-size: 1.5rem;
    }
    
    .contact-description {
      font-size: 0.85rem;
    }
    
    .detail-item {
      gap: 0.75rem;
    }
    
    .detail-icon {
      width: 40px;
      height: 40px;
    }
    
    .detail-icon svg {
      width: 18px;
      height: 18px;
    }
    
    .detail-label {
      font-size: 0.7rem;
    }
    
    .detail-value {
      font-size: 0.85rem;
    }
    
    .form-row {
      grid-template-columns: 1fr;
    }
    
    .contact-form-wrapper {
      padding: 1.25rem;
    }
    
    .form-group label {
      font-size: 0.8rem;
    }
    
    .form-group input,
    .form-group select {
      font-size: 0.875rem;
      padding: 0.75rem 1rem 0.75rem 2.5rem;
    }
    
    .form-group textarea {
      font-size: 0.875rem;
      padding: 0.75rem 1rem;
      min-height: 100px;
    }
    
    .btn-submit {
      font-size: 0.9rem;
      padding: 0.875rem;
    }
  }
  
  /* Form Status Messages */
  .form-status {
    display: none;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 3rem 2rem;
    gap: 1rem;
  }
  
  .form-status.show {
    display: flex;
  }
  
  .form-status.success svg {
    color: #27ca40;
  }
  
  .form-status.error svg {
    color: #ff5f56;
  }
  
  .form-status h3 {
    font-size: 1.5rem;
    color: var(--color-light);
    margin: 0;
  }
  
  .form-status p {
    color: var(--color-text-muted);
    font-size: 1rem;
  }
  
  /* Button Loading State */
  .btn-loading {
    display: none;
  }
  
  .btn-submit.loading .btn-text {
    display: none;
  }
  
  .btn-submit.loading .btn-loading {
    display: inline;
  }
  
  .btn-submit.loading svg {
    animation: spin 1s linear infinite;
  }
  
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  /* Hide form when showing status */
  .contact-form.hidden {
    display: none;
  }
  
  /* Demo Icons */
  .demo-icons {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px dashed var(--color-dark-muted);
  }
  
  .demo-label {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
  }
  
  .demo-btn {
    width: 36px;
    height: 36px;
    border-radius: var(--radius-md);
    background: var(--color-dark-soft);
    border: 1px solid var(--color-dark-muted);
    color: var(--color-text-muted);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition-fast);
  }
  
  .demo-btn:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    transform: translateY(-2px);
  }
  
  /* Success Overlay */
  .success-overlay {
    display: none;
    position: absolute;
    inset: 0;
    background: rgba(15, 23, 42, 0.98);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-xl);
    z-index: 15;
    align-items: center;
    justify-content: center;
    min-height: 400px;
  }
  
  .success-overlay.show {
    display: flex;
    animation: overlay-fade-in 0.4s ease-out;
  }
  
  @keyframes overlay-fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  /* Success Content */
  .success-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1rem;
    animation: content-pop 0.5s ease-out 0.2s both;
  }
  
  @keyframes content-pop {
    from { transform: scale(0.8); opacity: 0; }
    to { transform: scale(1); opacity: 1; }
  }
  
  .success-title {
    font-size: 1.5rem;
    color: var(--color-light);
    margin: 0;
  }
  
  .success-text {
    color: var(--color-text-muted);
    font-size: 1rem;
    margin: 0;
  }
  
  /* Blur Active State */
  .contact-form-wrapper.blur-active .contact-form,
  .contact-form-wrapper.blur-active .form-glow {
    filter: blur(6px);
    pointer-events: none;
    transition: filter 0.3s ease-out;
  }
  
  /* Keep form wrapper size */
  .contact-form-wrapper {
    position: relative;
    min-height: 450px;
  }
  
  .contact-form.hidden {
    visibility: hidden;
    position: absolute;
    opacity: 0;
  }
  
  /* Envelope Animation */
  .animation-envelope,
  .animation-check,
  .animation-confetti {
    display: none;
    position: absolute;
    inset: 0;
    align-items: center;
    justify-content: center;
  }
  
  .animation-envelope.active,
  .animation-check.active,
  .animation-confetti.active {
    display: flex;
  }
  
  .envelope {
    position: relative;
    width: 100px;
    height: 70px;
    animation: envelope-fly 2s ease-out forwards;
  }
  
  .envelope-back {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    border-radius: 4px;
  }
  
  .envelope-front {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 70%;
    background: linear-gradient(180deg, #0d9488, #0a7c72);
    border-radius: 0 0 4px 4px;
    clip-path: polygon(0 30%, 50% 0, 100% 30%, 100% 100%, 0 100%);
  }
  
  .envelope-letter {
    position: absolute;
    top: -20px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 50px;
    background: white;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: letter-pop 0.5s ease-out 0.3s forwards;
    opacity: 0;
  }
  
  .envelope-letter svg {
    color: var(--color-primary);
  }
  
  .envelope-trail {
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 4px;
    background: linear-gradient(90deg, transparent, var(--color-primary), transparent);
    border-radius: 2px;
    opacity: 0;
    animation: trail-show 1s ease-out 0.5s forwards;
  }
  
  @keyframes envelope-fly {
    0% { transform: scale(0.5) translateY(50px); opacity: 0; }
    30% { transform: scale(1) translateY(0); opacity: 1; }
    70% { transform: scale(1) translateY(0); opacity: 1; }
    100% { transform: scale(0.8) translateY(-100px); opacity: 0; }
  }
  
  @keyframes letter-pop {
    0% { opacity: 0; transform: translateX(-50%) translateY(20px); }
    100% { opacity: 1; transform: translateX(-50%) translateY(0); }
  }
  
  @keyframes trail-show {
    0%, 50% { opacity: 0; width: 0; }
    70% { opacity: 0.8; width: 80px; }
    100% { opacity: 0; width: 120px; }
  }
  
  /* Checkmark Animation */
  .check-circle {
    width: 100px;
    height: 100px;
  }
  
  .check-svg {
    width: 100%;
    height: 100%;
  }
  
  .check-circle-bg {
    stroke: var(--color-dark-muted);
    stroke-width: 2;
  }
  
  .check-circle-line {
    stroke: var(--color-primary);
    stroke-width: 2;
    stroke-dasharray: 157;
    stroke-dashoffset: 157;
    animation: circle-draw 0.6s ease-out forwards;
  }
  
  .check-mark {
    stroke: var(--color-primary);
    stroke-width: 3;
    stroke-linecap: round;
    stroke-linejoin: round;
    stroke-dasharray: 50;
    stroke-dashoffset: 50;
    animation: check-draw 0.4s ease-out 0.5s forwards;
  }
  
  @keyframes circle-draw {
    to { stroke-dashoffset: 0; }
  }
  
  @keyframes check-draw {
    to { stroke-dashoffset: 0; }
