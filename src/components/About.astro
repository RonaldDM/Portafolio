---
// About Section - Adapted from Stitch design
import { t, type Lang } from '../i18n/ui';

interface Props {
  lang?: Lang;
}

const { lang = 'es' } = Astro.props;
---

<section class="about section" id="about">
  <!-- Background Decorations -->
  <div class="about-bg-glow glow-1"></div>
  <div class="about-bg-glow glow-2"></div>
  
  <div class="container">
    <div class="about-grid">
      <!-- Left Column: Image -->
      <div class="about-image-col reveal-left">
        <div class="image-wrapper">
          <div class="image-gradient"></div>
          <img src="/profile.jpg" alt="Ronald Davila - Full Stack Developer" class="profile-image">
          <!-- Floating Badge -->
          <div class="image-badge">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
              <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
            <span>{t(lang, 'about.badge')}</span>
          </div>
        </div>
        <!-- Decorative Border -->
        <div class="image-border"></div>
      </div>
      
      <!-- Right Column: Content -->
      <div class="about-content-col reveal-right">
        <!-- Header -->
        <div class="about-header">
          <div class="section-label">
            <span class="label-line"></span>
            <span class="label-text">{t(lang, 'about.label')}</span>
          </div>
          <h2 class="about-title">
            {t(lang, 'about.title')} <br>
            <span class="text-muted">{t(lang, 'about.subtitle')}</span>
          </h2>
          <p class="about-text">
            {t(lang, 'about.text')}
          </p>
        </div>
        
        <!-- Minimalist Stats with Counter Animation -->
        <div class="about-stats-mini" id="stats-container">
          <div class="stat-item">
            <span class="stat-val" data-target="10" data-suffix="+">0</span>
            <span class="stat-lbl">{t(lang, 'about.stats.tech')}</span>
          </div>
          <div class="stat-divider"></div>
          <div class="stat-item">
            <span class="stat-val" data-target="5" data-suffix="+">0</span>
            <span class="stat-lbl">{t(lang, 'about.stats.projects')}</span>
          </div>
          <div class="stat-divider"></div>
          <div class="stat-item">
            <span class="stat-val" data-target="100" data-suffix="%">0</span>
            <span class="stat-lbl">{t(lang, 'about.stats.commitment')}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    background: var(--color-dark);
    position: relative;
    overflow: hidden;
  }
  
  /* Background Glows */
  .about-bg-glow {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
  }
  
  .glow-1 {
    width: 400px;
    height: 400px;
    background: rgba(13, 148, 136, 0.1);
    top: -100px;
    left: -100px;
    filter: blur(100px);
  }
  
  .glow-2 {
    width: 350px;
    height: 350px;
    background: rgba(139, 92, 246, 0.05);
    top: 200px;
    right: -100px;
    filter: blur(80px);
  }
  
  /* Grid Layout */
  .about-grid {
    display: grid;
    grid-template-columns: 5fr 7fr;
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 1;
  }
  
  /* Image Column */
  .about-image-col {
    position: relative;
    margin-top: 2rem;
  }
  
  .image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 5;
    border-radius: var(--radius-xl);
    overflow: hidden;
    border: 1px solid var(--color-dark-muted);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
  }
  
  .image-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, var(--color-dark) 0%, transparent 50%);
    z-index: 2;
    pointer-events: none;
  }
  
  .profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s ease;
  }
  
  .image-wrapper:hover .profile-image {
    transform: scale(1.05);
  }
  
  /* Floating Badge */
  .image-badge {
    position: absolute;
    bottom: 1.5rem;
    left: 1.5rem;
    z-index: 3;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.25rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(12px);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all var(--transition-base);
  }
  
  .image-badge:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
  }
  
  .image-badge svg {
    color: var(--color-primary);
  }
  
  .image-badge span {
    color: white;
    font-size: 0.875rem;
    font-weight: 500;
  }
  
  /* Decorative Border */
  .image-border {
    position: absolute;
    top: -1rem;
    right: -1rem;
    width: 100%;
    height: 100%;
    border: 2px solid rgba(13, 148, 136, 0.3);
    border-radius: var(--radius-xl);
    z-index: -1;
    transition: transform var(--transition-base);
  }
  
  .about-image-col:hover .image-border {
    transform: translate(0.5rem, -0.5rem);
  }
  
  /* Content Column */
  .about-content-col {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 1rem;
  }
  
  .about-header {
    margin-bottom: 2rem;
  }
  
  /* Section Label */
  .section-label {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.25rem;
  }
  
  .label-line {
    width: 2rem;
    height: 2px;
    background: var(--color-primary);
  }
  
  .label-text {
    color: var(--color-primary);
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
  }
  
  .about-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    line-height: 1.2;
    color: var(--color-light);
    margin-bottom: 1.5rem;
  }
  
  .about-title .text-muted {
    color: var(--color-text-muted);
  }
  
  .about-text {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    line-height: 1.8;
    max-width: 600px;
    margin-bottom: 0.5rem;
  }
  
  .about-text strong {
    color: var(--color-light);
  }
  
  /* Minimal Stats */
  .about-stats-mini {
    display: flex;
    align-items: center;
    gap: 2.5rem;
    margin-top: 1.5rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-dark-muted);
  }
  
  .stat-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  
  .stat-val {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--color-light);
    line-height: 1;
    background: linear-gradient(to right, #fff, var(--color-text-muted));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .stat-lbl {
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .stat-divider {
    width: 1px;
    height: 40px;
    background: var(--color-dark-muted);
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .about-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }
    
    .about-image-col {
      max-width: 280px;
      margin: 0 auto;
    }
    
    .about-content-col {
      padding-left: 0;
      align-items: center;
    }
    
    .section-label {
      justify-content: center;
    }
    
    .about-stats-mini {
      justify-content: center;
      gap: 2rem;
    }
    
    .image-border {
      display: none;
    }
  }
  
  @media (max-width: 600px) {
    .about {
      padding: 50px 0;
    }
    
    /* Horizontal layout: image left, header right */
    .about-grid {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }
    
    .about-image-col {
      display: flex;
      align-items: center;
      gap: 1rem;
      max-width: 100%;
    }
    
    /* Small circular profile */
    .image-wrapper {
      width: 80px;
      height: 80px;
      min-width: 80px;
      border-radius: 50%;
      overflow: hidden;
    }
    
    .profile-image {
      border-radius: 50%;
    }
    
    .image-gradient {
      border-radius: 50%;
    }
    
    .image-badge {
      display: none;
    }
    
    .image-border {
      display: none;
    }
    
    /* Header inline with image */
    .about-content-col {
      text-align: left;
      align-items: flex-start;
    }
    
    .section-label {
      justify-content: flex-start;
    }
    
    .about-header {
      margin-bottom: 0;
    }
    
    .about-title {
      font-size: 1.35rem;
      line-height: 1.3;
    }
    
    .about-title br {
      display: none;
    }
    
    .about-text {
      font-size: 0.85rem;
      line-height: 1.6;
    }
    
    .about-stats-mini {
      justify-content: space-between;
      gap: 0.5rem;
      width: 100%;
    }
    
    .stat-item {
      flex: 1;
      text-align: center;
    }
    
    .stat-val {
      font-size: 1.5rem;
    }
    
    .stat-lbl {
      font-size: 0.65rem;
    }
    
    .stat-divider {
      display: none;
    }
  }
</style>

<script>
  const statsContainer = document.getElementById('stats-container');
  const statValues = document.querySelectorAll('.stat-val[data-target]');
  let animated = false;
  
  function animateCounters() {
    if (animated) return;
    animated = true;
    
    statValues.forEach(stat => {
      const target = parseInt(stat.getAttribute('data-target') || '0');
      const suffix = stat.getAttribute('data-suffix') || '';
      const duration = 2000;
      const increment = target / (duration / 16);
      let current = 0;
      
      const updateCounter = () => {
        current += increment;
        if (current < target) {
          stat.textContent = Math.floor(current) + suffix;
          requestAnimationFrame(updateCounter);
        } else {
          stat.textContent = target + suffix;
        }
      };
      
      updateCounter();
    });
  }
  
  // Intersection Observer to trigger animation when visible
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        animateCounters();
        observer.disconnect();
      }
    });
  }, { threshold: 0.5 });
  
  if (statsContainer) {
    observer.observe(statsContainer);
  }
</script>
