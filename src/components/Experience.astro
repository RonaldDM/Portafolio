---
// Experience Section - Timeline with Project Cards
import { t, type Lang } from '../i18n/ui';

interface Props {
  lang?: Lang;
}

const { lang = 'es' } = Astro.props;
---

<section class="experience section" id="experience">
  <!-- Background Glows -->
  <div class="exp-glow glow-1"></div>
  <div class="exp-glow glow-2"></div>
  
  <div class="container">
    <!-- Section Header -->
    <div class="section-header reveal">
      <h2 class="section-title">{t(lang, 'experience.title')} <span class="gradient-text">{t(lang, 'experience.title_highlight')}</span></h2>
      <p class="section-description">
        {t(lang, 'experience.description')}
      </p>
    </div>
    
    <!-- Timeline Container -->
    <div class="timeline">
      <!-- Timeline Item: ESCIENZA -->
      <div class="timeline-item reveal">
        <!-- Timeline Line -->
        <div class="timeline-line">
          <div class="timeline-dot active"></div>
          <div class="timeline-connector"></div>
        </div>
        
        <!-- Content -->
        <div class="timeline-content">
          <!-- Role Header -->
          <div class="role-header">
            <div class="role-info">
              <h3 class="role-title">{t(lang, 'experience.role')}</h3>
              <div class="company-name">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                  <polyline points="9 22 9 12 15 12 15 22"/>
                </svg>
                <span>{t(lang, 'experience.company')}</span>
              </div>
            </div>
            <div class="role-date">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                <line x1="16" y1="2" x2="16" y2="6"/>
                <line x1="8" y1="2" x2="8" y2="6"/>
                <line x1="3" y1="10" x2="21" y2="10"/>
              </svg>
              <span>{t(lang, 'experience.period')}</span>
            </div>
          </div>
          
          <!-- Project Cards Grid -->
          <div class="projects-grid">
            <!-- Card 1: Sistema de Cuadres -->
            <article class="project-card glass">
              <div class="card-image">
                <img src="/projects/cuadres.png" alt="Sistema de Cuadres">
              </div>
              <div class="card-content">
                <h4 class="card-title">{t(lang, 'experience.projects.cuadres.title')}</h4>
                <p class="card-description">{t(lang, 'experience.projects.cuadres.description')}</p>
                <div class="card-tags">
                  <span class="tag primary">PHP</span>
                  <span class="tag">Python</span>
                  <span class="tag">MySQL</span>
                </div>
              </div>
            </article>
            
            <!-- Card 2: Sistema de Distribuci칩n -->
            <article class="project-card glass">
              <div class="card-image">
                <img src="/projects/distribucion.jpg" alt="Sistema de Distribuci칩n">
              </div>
              <div class="card-content">
                <h4 class="card-title">{t(lang, 'experience.projects.custom.title')}</h4>
                <p class="card-description">{t(lang, 'experience.projects.custom.description')}</p>
                <div class="card-tags">
                  <span class="tag primary">React</span>
                  <span class="tag">Node.js</span>
                  <span class="tag">MySQL</span>
                </div>
              </div>
            </article>
            
            <!-- Card 3: Redise침o Web -->
            <article class="project-card glass">
              <div class="card-image">
                <img src="/projects/web.png" alt="Redise침o Web">
              </div>
              <div class="card-content">
                <h4 class="card-title">{t(lang, 'experience.projects.web.title')}</h4>
                <p class="card-description">{t(lang, 'experience.projects.web.description')}</p>
                <div class="card-tags">
                  <span class="tag primary">Astro</span>
                  <span class="tag">JavaScript</span>
                  <span class="tag">SEO</span>
                </div>
              </div>
            </article>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .experience {
    background: var(--color-dark);
    position: relative;
    overflow: hidden;
  }
  
  .exp-glow {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
  }
  
  .glow-1 {
    width: 500px;
    height: 500px;
    background: rgba(13, 148, 136, 0.1);
    top: 0;
    left: 25%;
    filter: blur(100px);
  }
  
  .glow-2 {
    width: 600px;
    height: 600px;
    background: rgba(139, 92, 246, 0.08);
    bottom: 0;
    right: 25%;
    filter: blur(120px);
  }
  
  .section-header {
    margin-bottom: 3rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-dark-muted);
  }
  
  .section-title {
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: 700;
    color: var(--color-light);
    margin-bottom: 0.75rem;
  }
  
  .section-description {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    max-width: 700px;
  }
  
  /* Timeline */
  .timeline {
    position: relative;
  }
  
  .timeline-item {
    display: flex;
    gap: 2rem;
  }
  
  .timeline-line {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 0.5rem;
  }
  
  .timeline-dot {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: var(--color-dark-muted);
    border: 2px solid var(--color-dark-muted);
    z-index: 1;
    transition: all var(--transition-base);
  }
  
  .timeline-dot.active {
    background: var(--color-primary);
    border-color: rgba(13, 148, 136, 0.3);
    box-shadow: 0 0 15px rgba(13, 148, 136, 0.5);
  }
  
  .timeline-connector {
    width: 2px;
    flex-grow: 1;
    background: linear-gradient(to bottom, rgba(13, 148, 136, 0.5) 0%, var(--color-dark-muted) 100%);
    margin: 0.5rem 0;
  }
  
  .timeline-content {
    flex: 1;
    padding-bottom: 3rem;
  }
  
  /* Role Header */
  .role-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  .role-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-light);
    margin-bottom: 0.5rem;
  }
  
  .company-name {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-size: 1.1rem;
  }
  
  .company-name svg {
    color: var(--color-primary);
  }
  
  .role-date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--color-dark-soft);
    border: 1px solid var(--color-dark-muted);
    border-radius: var(--radius-lg);
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }
  
  .role-date svg {
    color: var(--color-primary);
  }
  
  /* Project Cards Grid */
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
  }
  
  .project-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-xl);
    padding: 1.25rem;
    transition: all var(--transition-base);
  }
  
  .project-card:hover {
    border-color: rgba(13, 148, 136, 0.4);
    transform: translateY(-4px);
  }
  
  .card-image {
    height: 120px;
    background: var(--color-dark);
    border-radius: var(--radius-lg);
    margin-bottom: 1rem;
    position: relative;
    overflow: hidden;
  }
  
  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }
  
  .project-card:hover .card-image img {
    transform: scale(1.05);
  }
  
  .card-content {
    display: flex;
    flex-direction: column;
  }
  
  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-top: auto;
  }
  
  .tag {
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-sm);
    color: white;
  }
  
  .tag.primary {
    background: rgba(13, 148, 136, 0.2);
    border-color: rgba(13, 148, 136, 0.3);
    color: var(--color-primary);
  }
  
  .card-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--color-light);
    margin-bottom: 0.5rem;
    transition: color var(--transition-fast);
  }
  
  .project-card:hover .card-title {
    color: var(--color-primary);
  }
  
  .card-description {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin-bottom: 0.75rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .card-stat {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    padding-top: 0.75rem;
    border-top: 1px solid var(--color-dark-muted);
  }
  
  .stat-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-primary);
  }
  
  .stat-label {
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .experience {
      padding: 60px 0;
    }
    
    .timeline-item {
      gap: 1rem;
    }
    
    .timeline-line {
      display: none;
    }
    
    .role-header {
      flex-direction: column;
      gap: 0.75rem;
    }
    
    .role-title {
      font-size: 1.25rem;
    }
    
    .company-name {
      font-size: 1rem;
    }
    
    /* Horizontal Carousel for Projects */
    .projects-grid {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      gap: 1rem;
      padding-bottom: 1rem;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: thin;
      scrollbar-color: var(--color-primary) transparent;
    }
    
    .projects-grid::-webkit-scrollbar {
      height: 4px;
    }
    
    .projects-grid::-webkit-scrollbar-track {
      background: var(--color-dark-muted);
      border-radius: 2px;
    }
    
    .projects-grid::-webkit-scrollbar-thumb {
      background: var(--color-primary);
      border-radius: 2px;
    }
    
    .project-card {
      flex: 0 0 280px;
      scroll-snap-align: start;
    }
    
    .card-image {
      height: 140px;
    }
  }
  
  @media (max-width: 480px) {
    .role-title {
      font-size: 1.1rem;
    }
    
    .project-card {
      flex: 0 0 260px;
    }
  }
</style>
