---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-bottom">
      <p>&copy; {currentYear} Ronald Davila. Todos los derechos reservados.</p>
      <p class="made-with">Hecho con <span class="gradient-text">Astro</span></p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-dark);
    border-top: 1px solid var(--color-dark-muted);
    padding: 1.5rem 0;
  }
  
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .footer-bottom p {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }
  
  .made-with {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }
  
  @media (max-width: 600px) {
    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
