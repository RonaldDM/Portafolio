            </svg>
            Código
          </a>
        </div>
      </div>
    </article>
  </div>
</section>

<style>
  .projects {
    background: var(--color-dark);
    position: relative;
    overflow: hidden;
  }
  
  /* Background Glows */
  .project-glow {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
  }
  
  .glow-1 {
    width: 600px;
    height: 600px;
    background: rgba(13, 148, 136, 0.12);
    top: -10%;
    right: -10%;
    filter: blur(100px);
    animation: blob 7s infinite;
  }
  
  .glow-2 {
    width: 500px;
    height: 500px;
    background: rgba(139, 92, 246, 0.08);
    bottom: -10%;
    left: -10%;
    filter: blur(100px);
    animation: blob 7s infinite reverse;
  }
  
  @keyframes blob {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
  }
  
  .section-header {
    text-align: left;
    margin-bottom: 3rem;
  }
  
  .section-label {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }
  
  .label-line {
    width: 2rem;
    height: 2px;
    background: var(--color-primary);
  }
  
  .label-text {
    color: var(--color-primary);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
  }
  
  .section-title {
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: 700;
    color: var(--color-light);
    margin-bottom: 0.75rem;
  }
  
  .section-description {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    max-width: 600px;
  }
  
  /* Project Card */
  .project-card {
    display: grid;
    grid-template-columns: 7fr 5fr;
    gap: 0;
    background: var(--color-dark-soft);
    border: 1px solid var(--color-dark-muted);
    border-radius: var(--radius-xl);
    overflow: hidden;
    position: relative;
    z-index: 1;
  }
  
  /* Visual Column */
  .project-visual {
    position: relative;
    min-height: 500px;
    overflow: hidden;
  }
  
  /* Screenshot Carousel */
  .screenshot-carousel {
    position: absolute;
    inset: 0;
    background: var(--color-dark);
  }
  
  .carousel-track {
    position: relative;
    width: 100%;
    height: 100%;
  }
  
  .carousel-slide {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
  }
  
  .carousel-slide.active {
    opacity: 1;
  }
  
  .carousel-dots {
    position: absolute;
    bottom: 1.5rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 0.5rem;
    z-index: 10;
  }
  
  .carousel-dots .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    border: none;
    cursor: pointer;
    transition: all var(--transition-base);
  }
  
  .carousel-dots .dot.active {
    width: 24px;
    border-radius: 4px;
    background: var(--color-primary);
  }
  
  .carousel-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: white;
    cursor: pointer;
    z-index: 10;
    transition: all var(--transition-base);
  }
  
  .carousel-arrow:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
  }
  
  .carousel-arrow.prev {
    left: 1rem;
  }
  
  .carousel-arrow.next {
    right: 1rem;
  }
  
  .card-glow {
    position: absolute;
    bottom: -50px;
    right: -50px;
    width: 300px;
    height: 300px;
    background: rgba(13, 148, 136, 0.2);
    border-radius: 50%;
    filter: blur(80px);
    transition: all var(--transition-base);
    z-index: 0;
  }
  
  .project-card:hover .card-glow {
    background: rgba(13, 148, 136, 0.3);
  }
  
  /* Content Column */
  .project-content {
    padding: 2.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    background: var(--color-dark-soft);
  }
  
  .project-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .project-logo {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
  }
  
  .project-title {
    font-size: 2rem;
    font-weight: 800;
    color: var(--color-light);
  }
  
  .project-description {
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.7;
  }
  
  .project-note {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    padding-left: 1rem;
    border-left: 2px solid rgba(13, 148, 136, 0.3);
  }
  
  /* Tech Stack */
  .tech-section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .tech-label,
  .features-label {
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: var(--color-text-muted);
  }
  
  .tech-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .tech-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.875rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-full);
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--color-primary-light);
  }
  
  .tech-badge .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
  }
  
  /* Features */
  .features-section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .features-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }
  
  .feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: rgba(13, 148, 136, 0.15);
    border-radius: var(--radius-md);
    color: var(--color-primary);
    flex-shrink: 0;
    transition: all var(--transition-fast);
  }
  
  .feature-item:hover .feature-icon {
    background: var(--color-primary);
    color: white;
  }
  
  .feature-item h4 {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-light);
    margin-bottom: 0.125rem;
  }
  
  .feature-item p {
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }
  
  /* Action Buttons */
  .project-actions {
    display: flex;
    gap: 1rem;
    margin-top: auto;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-dark-muted);
  }
  
  .project-actions .btn {
    flex: 1;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .project-card {
      grid-template-columns: 1fr;
    }
    
    .project-visual {
      min-height: 350px;
    }
  }
  
  @media (max-width: 600px) {
    .project-content {
      padding: 1.5rem;
    }
    
    .project-title {
      font-size: 1.5rem;
    }
    
    .project-actions {
      flex-direction: column;
    }
    
    .browser-mockup {
      inset: 1rem;
    }
    
    .floating-badge {
      top: 2rem;
      left: 2rem;
    }
  }
  
  /* Other Projects Grid */
  .other-projects {
    margin-top: 3rem;
  }
  
  .other-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-light);
    margin-bottom: 1.5rem;
  }
  
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
  }
  
  .mini-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-xl);
    padding: 1.5rem;
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
  }
  
  .mini-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(13, 148, 136, 0.5), transparent);
    opacity: 0;
    transition: opacity var(--transition-base);
  }
  
  .mini-card:hover {
    border-color: rgba(13, 148, 136, 0.4);
    transform: translateY(-4px);
    box-shadow: 0 20px 40px -15px rgba(13, 148, 136, 0.2);
  }
  
  .mini-card:hover::before {
    opacity: 1;
  }
  
  .mini-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .mini-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: rgba(13, 148, 136, 0.15);
    border-radius: var(--radius-lg);
    color: var(--color-primary);
    transition: all var(--transition-base);
  }
  
  .mini-card:hover .mini-icon {
    background: var(--color-primary);
    color: white;
  }
  
  .mini-arrow {
    color: var(--color-text-muted);
    font-size: 1.25rem;
    transition: color var(--transition-fast);
  }
  
  .mini-card:hover .mini-arrow {
    color: var(--color-primary);
  }
  
  .mini-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-light);
    margin-bottom: 0.5rem;
    transition: color var(--transition-fast);
  }
  
  .mini-card:hover .mini-title {
    color: var(--color-primary);
  }
  
  .mini-description {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin-bottom: 1rem;
    flex-grow: 1;
  }
  
  .mini-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-bottom: 1rem;
  }
  
  .mini-tech span {
    padding: 0.25rem 0.625rem;
    background: var(--color-dark);
    color: var(--color-text-muted);
    font-size: 0.7rem;
    font-weight: 500;
    border-radius: var(--radius-md);
    border: 1px solid var(--color-dark-muted);
  }
  
  .mini-footer {
    padding-top: 0.75rem;
    border-top: 1px solid var(--color-dark-muted);
  }
  
  .mini-stat {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-primary);
  }
  
  @media (max-width: 900px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 600px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
    
    .carousel-arrow {
      width: 32px;
      height: 32px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const slides = document.querySelectorAll('.carousel-slide');
    const dots = document.querySelectorAll('.carousel-dots .dot');
    const prevBtn = document.getElementById('carousel-prev');
    const nextBtn = document.getElementById('carousel-next');
    
    if (!slides.length) return;
    
    let currentIndex = 0;
    
    function goToSlide(index) {
      slides.forEach((slide, i) => {
        slide.classList.toggle('active', i === index);
      });
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === index);
      });
      currentIndex = index;
    }
    
    function nextSlide() {
      const next = (currentIndex + 1) % slides.length;
      goToSlide(next);
    }
    
    function prevSlide() {
      const prev = (currentIndex - 1 + slides.length) % slides.length;
      goToSlide(prev);
    }
    
    prevBtn?.addEventListener('click', prevSlide);
    nextBtn?.addEventListener('click', nextSlide);
    
    dots.forEach((dot, i) => {
      dot.addEventListener('click', () => goToSlide(i));
    });
    
    // Auto-advance every 5 seconds
    setInterval(nextSlide, 5000);
  });
</script>
