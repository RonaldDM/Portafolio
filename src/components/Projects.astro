---
// Projects Section - Featured Case Study Style
---

<section class="projects section" id="projects">
  <!-- Background Glows -->
  <div class="project-glow glow-1"></div>
  <div class="project-glow glow-2"></div>
  
  <div class="container">
    <!-- Section Header -->
    <div class="section-header reveal">
      <div class="section-label">
        <span class="label-line"></span>
        <span class="label-text">Portafolio</span>
      </div>
      <h2 class="section-title">Proyectos <span class="gradient-text">Destacados</span></h2>
    </div>
    
    <!-- Featured Project Card -->
    <article class="project-card reveal">
      <!-- Visual Column -->
      <div class="project-visual">
        <!-- Screenshot Carousel -->
        <div class="screenshot-carousel">
          <div class="carousel-track" id="carousel-track">
            <img src="/screenshots/restcabana_ss1.jpg" alt="RestCabaña Screenshot 1" class="carousel-slide active">
            <img src="/screenshots/restcabana_ss2.jpg" alt="RestCabaña Screenshot 2" class="carousel-slide">
            <img src="/screenshots/restcabana_ss3.jpg" alt="RestCabaña Screenshot 3" class="carousel-slide">
          </div>
          <!-- Navigation Dots -->
          <div class="carousel-dots">
            <button class="dot active" data-index="0"></button>
            <button class="dot" data-index="1"></button>
            <button class="dot" data-index="2"></button>
          </div>
          <!-- Navigation Arrows -->
          <button class="carousel-arrow prev" id="carousel-prev">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="15 18 9 12 15 6"/>
            </svg>
          </button>
          <button class="carousel-arrow next" id="carousel-next">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9 18 15 12 9 6"/>
            </svg>
          </button>
        </div>
        <!-- Glow Effect -->
        <div class="card-glow"></div>
      </div>
      
      <!-- Content Column -->
      <div class="project-content">
        <div class="project-header">
          <img src="/restcabana.png" alt="RestCabaña" class="project-logo">
          <h3 class="project-title">RestCabaña</h3>
        </div>
        
        <p class="project-description">
          Sistema de Gestión Integral para Restaurantes. Una solución completa para la administración 
          de reservas, control de inventario, punto de venta y gestión de personal.
        </p>
        
        <!-- Tech Stack -->
        <div class="tech-section">
          <span class="tech-label">Stack Tecnológico</span>
          <div class="tech-badges">
            <span class="tech-badge"><span class="dot" style="background: #E0234E"></span>NestJS</span>
            <span class="tech-badge"><span class="dot" style="background: #61DAFB"></span>React Native</span>
            <span class="tech-badge"><span class="dot" style="background: #3178C6"></span>TypeScript</span>
            <span class="tech-badge"><span class="dot" style="background: #4479A1"></span>MySQL</span>
            <span class="tech-badge"><span class="dot" style="background: #2D3748"></span>Prisma</span>
            <span class="tech-badge"><span class="dot" style="background: #FFCA28"></span>Firebase</span>
          </div>
        </div>
        
        <!-- Features -->
        <div class="features-section">
          <span class="features-label">Funcionalidades Core</span>
          <div class="features-list">
            <div class="feature-item">
              <div class="feature-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
                  <polyline points="14 2 14 8 20 8"/>
                </svg>
              </div>
              <div>
                <h4>API REST Completa</h4>
                <p>Backend robusto con autenticación JWT</p>
              </div>
            </div>
            <div class="feature-item">
              <div class="feature-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="5" y="2" width="14" height="20" rx="2" ry="2"/>
                  <line x1="12" y1="18" x2="12.01" y2="18"/>
                </svg>
              </div>
              <div>
                <h4>App Móvil</h4>
                <p>React Native para iOS y Android</p>
              </div>
            </div>
            <div class="feature-item">
              <div class="feature-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/>
                  <line x1="1" y1="10" x2="23" y2="10"/>
                </svg>
              </div>
              <div>
                <h4>Pasarela de Pagos</h4>
                <p>Integración segura para cobros</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Action Buttons -->
        <div class="project-actions">
          <a href="#" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
              <polyline points="15 3 21 3 21 9"/>
              <line x1="10" y1="14" x2="21" y2="3"/>
            </svg>
            Ver Demo
          </a>
          <a href="https://github.com/RonaldDM" target="_blank" class="btn btn-outline">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
